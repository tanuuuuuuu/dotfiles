layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }
    tab name="Obsidian（Zettelkasten）" {
        pane split_direction="vertical" {
            pane size="55%" split_direction="horizontal" {
                pane size="80%" cwd="~/Documents/zettelkasten" name="Vim" command="nvim"
                pane size="20%" cwd="~/Documents/zettelkasten" name="Terminal"
            }
            pane size="45%" cwd="~/Documents/zettelkasten" name="Claude Code" command="claude" focus=true
        }
    }
    tab {
        pane cwd="~"
    }
}
