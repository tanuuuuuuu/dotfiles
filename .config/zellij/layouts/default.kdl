layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }

    // 開発用3ペインレイアウト: Vim + Terminal + Claude Code
    pane_template name="dev-layout" {
        pane split_direction="vertical" {
            pane size="55%" name="Vim" command="nvim"
            pane size="45%" name="Claude Code" command="claude" focus=true
        }
    }

    tab name="Zettelkasten" cwd="~/repos/zettelkasten" {
        dev-layout
    }
    tab name="dotfiles" cwd="~/dotfiles" {
        dev-layout
    }
    tab name="Polaris" cwd="~/repos/polaris" {
        dev-layout
    }
    tab name="_blank" {
        pane cwd="~"
    }
}
